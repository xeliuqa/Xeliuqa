<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="#0095da"
                android:startColor="#121325" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#0f0f1d" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>