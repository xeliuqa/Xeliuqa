<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image_view"
        android:padding="5dp"
        android:src="@drawable/arrow_r" />
    <TextView
        android:id="@+id/txt_hash"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/txt_fail"
        android:layout_toEndOf="@id/image_view"
        android:text="type"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:textColor="#0686d1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/txt_fail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/txt_amount"
        android:layout_toRightOf="@id/txt_hash"
        android:text="..."
        android:paddingTop="10dp"
        android:gravity="left"
        android:textColor="#0686d1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="amount"
        android:maxLines="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#0686d1"
        android:textSize="15sp" />


</RelativeLayout>