<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".erc_send">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="0dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/arrow_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="60dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:padding="5dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/AFCASH_Balance"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="0.00000000"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <!--<TextView
                android:id="@+id/AFCASH_usd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="0.00"
                android:textColor="#FFD62C"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:text="Please make sure you have a valid wallet address of the recipient."
            android:textColor="#FFFFFF"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/glass">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- Bitcoin address field -->
                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/etAddress"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:hint="Coin Address"
                        android:paddingLeft="10dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/glass2"
                        android:textColorHint="#FFFFFF" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="#012a36"
                        android:padding="10dp"
                        android:id="@+id/btn_scan"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qr" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/glass">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!--bitcoin amount field  -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:id="@+id/etAmount"
                        android:hint="Amount of Coin"
                        android:paddingLeft="10dp"
                        android:background="@drawable/glass2"
                        android:textColorHint="#FFFFFF"
                        android:textColor="#FFFFFF"
                        android:inputType="number"
                        android:digits="0123456789."/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textColor="#0686d1"
                        android:padding="15dp"
                        android:id="@+id/max"
                        android:scaleType="fitCenter"
                        android:autoSizeTextType="uniform"
                        android:text="MAX" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!--<TextView
            android:id="@+id/usd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:paddingLeft="20dp"
            android:textSize="20dp"
            android:text="$0.00"
            android:textColor="#697FC7" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <!--bitcoin amount field  -->
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:id="@+id/pees"
                android:padding="15dp"
                android:textColor="#0686d1"
                android:autoSizeTextType="uniform"
                android:scaleType="fitCenter"
                android:text="Insert Gas Fee:" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:id="@+id/gweifee"
                android:paddingStart="15dp"
                android:hint=""
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/glass"
                android:textColorHint="#FFFFFF"
                android:inputType="number"
                android:digits="0123456789."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/editext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="safe: "
                android:textColor="#80ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/erc_dataSafeGas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingStart="3dp"
                android:paddingEnd="0dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="0dp"
                android:text="Proposed: "
                android:textColor="#80ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/erc_dataProposeGas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingStart="3dp"
                android:paddingEnd="0dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="0dp"
                android:text="Fast: "
                android:textColor="#80ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/erc_dataFastGas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:paddingStart="3dp"
                android:paddingEnd="10dp"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>


        <!-- send now -->
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/button_selected"
            android:textColor="#ffffff"
            android:text="Send" />
    </LinearLayout>

    <!--Android Camera-->

</androidx.constraintlayout.widget.ConstraintLayout>